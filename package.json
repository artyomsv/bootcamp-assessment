{
  "name": "star-wars",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^1.3.0",
    "@material-ui/icons": "^1.1.0",
    "axios": "^0.18.0",
    "classnames": "^2.2.6",
    "global": "^4.3.2",
    "lodash": "^4.17.16",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-loadable": "^5.4.0",
    "react-redux": "^5.0.7",
    "react-redux-toastr": "^7.3.0",
    "react-router-dom": "^4.3.1",
    "react-router-redux": "^5.0.0-alpha.9",
    "redux": "^4.0.0",
    "redux-actions": "^2.4.0",
    "redux-form": "^7.4.2",
    "redux-persist": "^5.10.0",
    "redux-thunk": "^2.3.0"
  },
  "scripts": {
    "start": "react-scripts-ts start",
    "build": "react-scripts-ts build --source-map true",
    "test": "nyc react-scripts-ts test --env=jsdom",
    "posttest": "nyc report --reporter=json && codecov -f coverage/*.json",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.4.8",
    "@storybook/addon-links": "^3.4.8",
    "@storybook/react": "^3.4.8",
    "@types/axios": "^0.14.0",
    "@types/classnames": "^2.2.4",
    "@types/enzyme": "^3.1.11",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/jest": "^23.1.3",
    "@types/lodash": "^4.14.110",
    "@types/node": "^10.5.1",
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "@types/react-loadable": "^5.4.0",
    "@types/react-redux": "^6.0.3",
    "@types/react-redux-toastr": "^7.0.11",
    "@types/react-router": "^4.0.27",
    "@types/react-router-dom": "^4.2.7",
    "@types/react-router-redux": "^5.0.15",
    "@types/react-test-renderer": "^16.0.1",
    "@types/redux": "^3.6.0",
    "@types/redux-actions": "^2.3.0",
    "@types/redux-devtools-extension": "^2.13.2",
    "@types/redux-form": "^7.3.1",
    "@types/redux-thunk": "^2.1.0",
    "@types/storybook__react": "^3.0.7",
    "codecov": "^3.0.2",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.4",
    "express": "^4.16.3",
    "jest": "^23.2.0",
    "jest-enzyme": "^6.0.2",
    "morgan": "^1.9.0",
    "nyc": "^12.0.2",
    "react-scripts-ts": "2.16.0",
    "react-test-renderer": "^16.4.1",
    "redux-devtools-extension": "^2.13.5",
    "ts-jest": "^22.4.6",
    "typescript": "^2.9.2"
  },
  "proxy": {
    "/api/data/*": {
      "target": "https://api.themoviedb.org/3",
      "secure": false,
      "logLevel": "debug",
      "pathRewrite": {
        "^/api/data": ""
      }
    },
    "/api/image/*": {
      "target": "http://image.tmdb.org/t/p",
      "secure": true,
      "logLevel": "debug",
      "changeOrigin": true,
      "pathRewrite": {
        "^/api/image": ""
      }
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/node_modules/",
      "!src/**/*stories.{ts,tsx}",
      "!src/**/index.{ts,tsx}",
      "!src/**/store.{ts,tsx}",
      "!src/**/*.reducer.{ts,tsx}",
      "!src/**/registerServiceWorker.{ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "coverageReporters": [
      "text",
      "html"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  }
}
